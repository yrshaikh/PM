{{> teamNav}}
<div id="mainbody">
    <h3>Teams</h3>

    <div class="row inner"></div>
</div>

<script type="text/template" id="team-list-template">
    <% if (teams.length !== 0) { %>
    <div>
        <% _.each(teams, function(team) { %>
        <a href="/teams" class="team-card">
            <span class="item posrel">
                <img class="posabs" src="/images/3dots.png" />
                <h4><%= team.name %></h4>
                <ul>
                    <li><%= team.projectCount %> projects</li>
                    <li><%= team.userCount %> members</li>
                </ul>
            </span>
        </a>
        <% }); %>
    </div>
    <% } else { %>
    <div>No teams.</div>
    <% } %>
</script>


<script type='text/javascript' src='/javascripts/app/team/team-list.js'></script>
<script type="text/javascript">
    $(document).ready(function () {
        var teamView = new TeamListView({
            el: '.inner'
        });
    });
</script>