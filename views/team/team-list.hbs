{{> teamNav}}
<div id="mainbody">
    <h3>Teams</h3>

    <div class="row inner"></div>
</div>

<script type="text/template" id="team-list-template">
    <% if (teams.length !== 0) { %>
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Team</th>
                    <th>Projects</th>
                    <th>Users</th>
                </tr>
            </thead>
            <tbody>
                <% _.each(teams, function(team) { %>
                <tr>
                    <td><a class="btn"><%= team.name %></a></td>
                    <td><a class="btn"><%= team.projectCount %></a><a class="btn btn-link">Add new project</a></td>
                    <td><a class="btn"><%= team.userCount %></a></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
    <div>No teams.</div>
    <% } %>
</script>


<script type='text/javascript' src='/javascripts/app/team/team-list.js'></script>
<script type="text/javascript">
    $(document).ready(function () {
        var teamView = new TeamListView({
            el: '.inner'
        });
    });
</script>