{{> projectNav}}
<div id="mainbody">
    <div class="row inner"></div>
</div>

<script type="text/template" id="project-list-template">
    <div class="dashboard">
        <% _.each(teams, function(team) { %>
        <div class="team">
            <h4><i class="fa fa-users famr10"></i><%= team.teamName %></h4>
            <div class="projects">
                <% _.each(team.projects, function(project) { %>
                    <div class="team-card">
                        <div class="item posrel">
                            <div class="pull-left">
                                <a href="/projects/<%= project.id %>/<%= project.slug %>/"><h4><%= project.name %></h4></a>
                            </div>
                            <div class="clearfix">
                                <ul>
                                    <li><a href="/projects/<%= project.id %>/<%= project.slug %>/"><i class="fa fa-ticket"></i>All Issues</a></li>
                                    <!--<li><a href="/projects/<%= project.id %>/<%= project.slug %>?s=open"><i class="fa fa-ticket"></i>32 Open Issues</a></li>
                                    <li><a href="/projects/<%= project.id %>/<%= project.slug %>?s=wip"><i class="fa fa-keyboard-o"></i>5 In Progress</a></li>-->
                                    <li><a href="/projects/<%= project.id %>/<%= project.slug %>/documents"><i class="fa fa-book"></i>7 Documents</a></li>
                                    <li><a href="/projects/<%= project.id %>/<%= project.slug %>/settings"><i class="fa fa-cog"></i>Settings</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                <% }); %>
                    <a href="/projects/create?team=<%= team.teamId %>" class="team-card">
                        <div class="item posrel">
                            <div class="pull-left">
                                <h4 class="newitem">Create New Project...</h4>
                            </div>
                        </div>
                    </a>
            </div>
        </div>
        <% }); %>
    </div>
</script>

<script type='text/javascript' src='/javascripts/app/project/project-list.js'></script>
<script type="text/javascript">
    $(document).ready(function () {
        var teamView = new TeamListView({
            el: '.inner'
        });
    });
</script>